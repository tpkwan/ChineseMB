<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    style="?jom_header"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/lnrSideMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imgSideMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ijoomer_sidemenu" />

        <View
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ijoomer_sidemenu_seprator" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/imgFriendNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jom_notification_friend" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtFriendNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@id/imgFriendNotification"
                android:background="@drawable/jom_notification_alert"
                android:gravity="center"
                android:paddingRight="1dp"
                android:textColor="@color/jom_white"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/imgMessageNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jom_notification_message" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtMessageNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@id/imgMessageNotification"
                android:background="@drawable/jom_notification_alert"
                android:gravity="center"
                android:paddingRight="1dp"
                android:textColor="@color/jom_white"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/imgGlobalNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jom_notification_group" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtGlobalNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@id/imgGlobalNotification"
                android:background="@drawable/jom_notification_alert"
                android:gravity="center"
                android:paddingRight="1dp"
                android:textColor="@color/jom_white"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>