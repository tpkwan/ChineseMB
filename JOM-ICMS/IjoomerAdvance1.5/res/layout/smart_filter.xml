<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ijoomer_btn"
        android:orientation="horizontal" >

        <com.ijoomer.customviews.IjoomerTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/filter"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="Filter Data"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:background="@drawable/filter_default" >

            <LinearLayout
                android:id="@+id/lnrFilterItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/filter_default"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@color/bg_color"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lnrMultiSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="5dp" >

                <com.ijoomer.customviews.IjoomerTextView
                    style="?textview_h3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text="Select"
                    android:textColor="@color/blue" />

                <com.ijoomer.customviews.IjoomerButton
                    android:id="@+id/btnAll"
                    style="?button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="All" />

                <com.ijoomer.customviews.IjoomerButton
                    android:id="@+id/btnNone"
                    style="?button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="None" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/bg_color"
                android:paddingTop="20dp"
                android:visibility="gone" >

                <ListView
                    android:id="@+id/lstFilterData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ijoomer_wall_activity_topbox"
                    android:cacheColorHint="@null"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="1dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/bg_color"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:visibility="gone" >

                <com.ijoomer.customviews.IjoomerTextView
                    style="?textview_h3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Start Date" />

                <com.ijoomer.customviews.IjoomerEditText
                    android:id="@+id/edtStartDate"
                    style="?edittext_h3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:singleLine="true" />

                <com.ijoomer.customviews.IjoomerTextView
                    style="?textview_h3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="End Date" />

                <com.ijoomer.customviews.IjoomerEditText
                    android:id="@+id/edtEndDate"
                    style="?edittext_h3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/bg_color"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:visibility="visible" >

                <com.ijoomer.customviews.IjoomerTextView
                    style="?textview_h3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Start Time" />

                <com.ijoomer.customviews.IjoomerEditText
                    android:id="@+id/edtStartTime"
                    style="?edittext_h3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:singleLine="true" />

                <com.ijoomer.customviews.IjoomerTextView
                    style="?textview_h3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="End Time" />

                <com.ijoomer.customviews.IjoomerEditText
                    android:id="@+id/edtEndTime"
                    style="?edittext_h3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/bg_color"
                android:visibility="gone" >

                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:name="com.ijoomer.map.IjoomerMapFragment" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/btnApply"
            style="?button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="Apply" />

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/btnReset"
            style="?button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="Reset" />
    </LinearLayout>

</LinearLayout>