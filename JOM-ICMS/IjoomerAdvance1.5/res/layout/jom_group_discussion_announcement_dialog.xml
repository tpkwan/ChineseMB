<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/jom_blue"
        android:orientation="vertical"
        android:padding="2dip" >

        <LinearLayout
            style="?jom_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@color/jom_blue"
                    android:orientation="horizontal" >

                    <com.ijoomer.customviews.IjoomerTextView
                        android:id="@+id/txtDiscussionAnnouncementTitle"
                        style="?jom_alert_header_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgDiscussionAnnouncementClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/com_facebook_close" />
                </LinearLayout>

                <com.ijoomer.customviews.IjoomerEditText
                    android:id="@+id/edtDiscussionAnnouncementTitle"
                    style="?jom_edittext_h2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="left|top"
                    android:hint="@string/title"
                    android:lines="2" />

                <com.ijoomer.customviews.IjoomerEditText
                    android:id="@+id/edtDiscussionAnnouncementMessage"
                    style="?jom_edittext_h2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="left|top"
                    android:hint="@string/dialog_share_write_message_hint" />

                <com.ijoomer.customviews.IjoomerCheckBox
                    android:id="@+id/chbDiscussionAnnouncementAllowMemberUploadFile"
                    style="?jom_textview_h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:button="@drawable/checkbox_selector"
                    android:text="@string/group_allow_member_upload_file" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="5dp" >

                <com.ijoomer.customviews.IjoomerButton
                    android:id="@+id/btnCancel"
                    style="?jom_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="@string/cancel" />

                <com.ijoomer.customviews.IjoomerButton
                    android:id="@+id/btnCreate"
                    style="?jom_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/create" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>