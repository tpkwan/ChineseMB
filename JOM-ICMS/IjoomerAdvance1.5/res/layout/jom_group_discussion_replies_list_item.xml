<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnrMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ijoomer_wall_activity_topbox"
            android:orientation="horizontal"
            android:padding="3dp" >

            <ImageView
                android:id="@+id/imgDiscussionRepliesAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtDiscussionRepliesUser"
                    style="?jom_textview_h3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtDiscussionRepliesTitle"
                    style="?jom_textview_h3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
                 
                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtDiscussionRepliesDate"
                    style="?jom_textview_h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtDiscussionRepliesEdit"
                style="?jom_textview_blue_h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/edit" />

            <ImageView
                android:id="@+id/imgDiscussionRepliesRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:adjustViewBounds="true"
                android:background="@drawable/wall_remove" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>