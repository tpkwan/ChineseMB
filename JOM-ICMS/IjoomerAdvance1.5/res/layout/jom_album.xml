<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?jom_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/lnrPhotosHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/jom_friend_member_tab_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3" >

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtAllPhotos"
                style="?jom_textview_h3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/all_phots" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtMyPhotos"
                style="?jom_textview_h3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/my_phots" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtAddAlbum"
                style="?jom_textview_h3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:text="@string/add_album" />
        </LinearLayout>
    </LinearLayout>

    <com.ijoomer.customviews.IjoomerButton
        android:id="@+id/btnAddAlbum"
        style="?jom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/add_album"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lnrFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </LinearLayout>

</LinearLayout>