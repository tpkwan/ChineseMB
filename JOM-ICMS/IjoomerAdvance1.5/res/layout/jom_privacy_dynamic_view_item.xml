<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lnrGgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/jom_blue"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?textview_white_h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?textview_blue_h2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <com.ijoomer.customviews.IjoomerTextView
            style="?textview_blue_h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/email"
            android:textStyle="bold" />

        <com.ijoomer.customviews.IjoomerTextView
            style="?textview_blue_h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/onsite"
            android:textStyle="bold" />

        <com.ijoomer.customviews.IjoomerTextView
            style="?textview_blue_h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/push"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?textview_h2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <com.ijoomer.customviews.IjoomerEditText
            android:id="@+id/txtValue"
            style="?textview_h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:gravity="center_vertical"
            android:inputType="none"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrEditArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?textview_h2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <com.ijoomer.customviews.IjoomerEditText
            android:id="@+id/txtValue"
            style="?textview_h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:gravity="center_vertical"
            android:inputType="none"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrEditClickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?textview_h2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <com.ijoomer.customviews.IjoomerEditText
            android:id="@+id/txtValue"
            style="?textview_h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:gravity="center_vertical"
            android:inputType="none"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrSpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?textview_h2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <Spinner
            android:id="@+id/txtValue"
            style="?spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?textview_h2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <com.ijoomer.customviews.IjoomerCheckBox
            android:id="@+id/txtValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@drawable/checkbox_selector"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrComplex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="visible" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtLable"
            style="?textview_h2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <com.ijoomer.customviews.IjoomerCheckBox
            android:id="@+id/chkValue1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@drawable/checkbox_selector"
            android:gravity="center_vertical"
            />

        <com.ijoomer.customviews.IjoomerCheckBox
            android:id="@+id/chkValue2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@drawable/checkbox_selector"
            android:gravity="center_vertical" />

        <com.ijoomer.customviews.IjoomerCheckBox
            android:id="@+id/chkValue3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:button="@drawable/checkbox_selector"
            android:gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>